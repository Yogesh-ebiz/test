{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Job Service API",
      "description": "Job Service API"
    },
    "host": "http://accessed-job-service.us-west-2.elasticbeanstalk.com",
    "basePath": "/api/",
    "tags": [
      {
        "name": "Job Functions",
        "description": "API for job functions in the system"
      },
      {
        "name": "Jobs",
        "description": "API for jobs in the system"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "securityDefinitions": {
      "AuthHeader": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    },
    "paths": {
      "/jobfunctions": {
        "post": {
          "tags": ["Auth"],
          "description": "Login to the system",
        "parameters": [{
          "name": "auth",
          "in": "body",
          "description": "User auth details",
          "schema": {
            "type": "object",
            "required": ["email", "password"],
            "properties": {
              "email": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            }
          }
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User is loggedin",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
      }
    },
    "definitions": {
      "Job Functions": {
        "required": [
          "email",
          "fullname"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "email": {
            "type": "string",
            "uniqueItems": true
          },
          "fullname": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Jobs": {
        "type": "array",
        "$ref": "#/definitions/Jobs"
      },
      "Auth": {
        "type": "object",
        "properties": [{
          "token": {
            "type": "string"
          },
          "user": {
            "$ref": "#/definitions/User"
          }
        }]
      }
  }
}
